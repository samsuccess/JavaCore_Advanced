<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.202" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="calculator.Controller">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <TextArea fx:id="textArea" layoutX="5" layoutY="5" prefHeight="60" prefWidth="215"/>

    <Button onAction="#clickPlus" layoutX="5" layoutY="75" prefHeight="50" prefWidth="50" text="+"/>
    <Button onAction="#clickMinus" layoutX="60" layoutY="75" prefHeight="50" prefWidth="50" text="-"/>
    <Button onAction="#clickMulty" layoutX="115" layoutY="75" prefHeight="50" prefWidth="50" text="*"/>
    <Button onAction="#clickSplit" layoutX="170" layoutY="75" prefHeight="50" prefWidth="50" text="/"/>
    <Button onAction="#clickSeven" layoutX="5" layoutY="130" prefHeight="50" prefWidth="50" text="7"/>
    <Button onAction="#clickEight" layoutX="60" layoutY="130" prefHeight="50" prefWidth="50" text="8"/>
    <Button onAction="#clickNine" layoutX="115" layoutY="130" prefHeight="50" prefWidth="50" text="9"/>
    <Button onAction="#clickFour" layoutX="5" layoutY="185" prefHeight="50" prefWidth="50" text="4"/>
    <Button onAction="#clickFive" layoutX="60" layoutY="185" prefHeight="50" prefWidth="50" text="5"/>
    <Button onAction="#clickSex" layoutX="115" layoutY="185" prefHeight="50" prefWidth="50" text="6"/>
    <Button onAction="#clickClear" layoutX="170" layoutY="130" prefHeight="105" prefWidth="50" text="C"/>
    <Button onAction="#clickOne" layoutX="5" layoutY="240" prefHeight="50" prefWidth="50" text="1"/>
    <Button onAction="#clickTwo" layoutX="60" layoutY="240" prefHeight="50" prefWidth="50" text="2"/>
    <Button onAction="#clickThree" layoutX="115" layoutY="240" prefHeight="50" prefWidth="50" text="3"/>
    <Button onAction="#clickEqually" layoutX="170" layoutY="240" prefHeight="105" prefWidth="50" text="="/>
    <Button onAction="#clickZero" layoutX="5" layoutY="295" prefHeight="50" prefWidth="105" text="0"/>
    <Button onAction="#clickDouble" layoutX="115" layoutY="295" prefHeight="50" prefWidth="50" text=","/>
</AnchorPane>
